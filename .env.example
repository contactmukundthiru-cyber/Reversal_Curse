# Reversal Curse Research Project
# Environment Configuration
#
# IMPORTANT: Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# =============================================================================
# Environment Mode
# =============================================================================
# Set to 'production' for deployed environments
# This enables security features like required passwords and CORS restrictions
FLASK_ENV=development
FLASK_DEBUG=true

# =============================================================================
# Security (REQUIRED in production)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Dashboard admin password (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(24))"
DASHBOARD_PASSWORD=

# API key for export endpoints (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
EXPORT_API_KEY=

# Allowed CORS origins (comma-separated, for production)
# Example: https://yourdomain.com,https://app.prolific.co
ALLOWED_ORIGINS=

# =============================================================================
# Database
# =============================================================================
# SQLite (default for development)
# The database will be created automatically at data/reversal_curse.db

# PostgreSQL (for production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=reversal_curse
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# =============================================================================
# Prolific Integration
# =============================================================================
# Get your API token from Prolific researcher dashboard
PROLIFIC_API_TOKEN=

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
PORT=5000
